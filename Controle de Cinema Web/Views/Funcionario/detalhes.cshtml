@model DetalhesFuncionarioViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Visualizar Detalhes do Funcionário";
}

<div class="row mt-3">
    <div class="col-lg-6 d-grid gap-2 d-md-block">

        <div class="d-grid">
            <label class="fs-5"><strong>Funcionário:</strong> @Model.Nome</label>

            <label><strong>Id:</strong> [@Model.Id]</label>
            <label><strong>Login:</strong> @Model.Login</label>
            <label><strong>Senha:</strong> @Model.Senha</label>
        </div>

        <a href="/funcionario/listar" class="btn btn-secondary px-5 mt-4">
            <i class="bi bi-arrow-return-left me-1"></i>
            Voltar
        </a>
    </div>
</div>