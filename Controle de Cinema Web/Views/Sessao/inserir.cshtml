@using ControleDeCinema.Infra.Orm.Compartilhado
@using ControleDeCinema.Infra.Orm.ModuloFilme
@using ControleDeCinema.Infra.Orm.ModuloSala
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model InserirSessaoViewModel

@{ ControleDeCinemaDbContext db = new ControleDeCinemaDbContext();
   RepositorioSalaEmOrm repositorioSala = new RepositorioSalaEmOrm(db);
   RepositorioFilmeEmOrm repositorioFilme = new RepositorioFilmeEmOrm(db);
   Layout = "_Layout";
   ViewBag.Title = "Cadastrar Sessão";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" asp-action="Inserir">

            <div class="mt-2">
                <label class="control-label">Sala:</label>
                <select class="form-select" asp-for="Sala" asp-items="Model.Salas">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="Sala"></span>
            </div>

            <div class="mt-2">
                <label class="control-label">Horário:</label>
                <select class="form-select" asp-for="Horario">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="Horario"></span>
            </div>
            
            <div class="mt-2">
                <label class="control-label">Filme:</label>
                <select class="form-select" asp-for="Filme" asp-items="Model.Filmes">
                    <option></option>
                </select>
                <span class="text-danger my-1" asp-validation-for="Filme"></span>
            </div>
            
            <div class="mt-2">
                <label class="control-label fw-semibold">Qtd.Ingressos:</label>
                <input class="form-control" asp-for="QtdIngressos"  />
                <span class="text-danger my-1" asp-validation-for="QtdIngressos"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/sessao/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>

            </div>
        </form>

    </div>
</div>

