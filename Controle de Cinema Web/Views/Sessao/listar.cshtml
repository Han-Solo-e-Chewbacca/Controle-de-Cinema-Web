@using ControleDeCinema.Infra.Orm.Compartilhado
@using ControleDeCinema.Infra.Orm.ModuloFilme
@model IEnumerable<ListarSessaoViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Sessões";
}

<div class="mt-3">
    <a class="btn btn-primary px-5" href="/sessao/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Nova Sessão
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var sessao in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">
            <div class="card-body">
                <div class="row row-cols-2">
                    <label class="card-title fs-5 fw-semibold">@sessao.Sala</label>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/sessao/detalhes/@sessao.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/sessao/editar/@sessao.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/sessao/excluir/@sessao.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> [@sessao.Id]</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Data:</strong> @sessao.Horario.Date</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Filme:</strong> @sessao.Filme.Titulo</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>Qtd.Ingressos:</strong> @sessao.QtdIngressos</p>
            </div>

        </div>
    }
</div>
